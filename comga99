    <label for="category">Ch·ªçn m·ª•c:</label>
    <select id="category" onchange="updateMenu()">
      <option value="">-- Ch·ªçn lo·∫°i m√≥n --</option>
      <option value="comgaxoimo">C∆°m g√† x·ªëi m·ª°</option>
