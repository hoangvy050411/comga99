      <option value="">-- Ch·ªçn m√≥n --</option>
    </select>

    <label for="quantity">S·ªë l∆∞·ª£ng:</label>
    <input type="number" id="quantity" value="1" min="1" />

    <button onclick="addToCart()">‚ûï Th√™m v√†o gi·ªè</button>

    <div class="cart">
      <h3>üß∫ Gi·ªè h√†ng</h3>
      <ul id="cartList"></ul>
      <p><b>T·ªïng ti·ªÅn: </b><span id="total">0</span> ƒë</p>
      <button onclick="placeOrder()">üßæ ƒê·∫∑t m√≥n</button>
    </div>
  </div>

  <script>
    const menu = {
      comgaxoimo: {
        "C∆°m g√† g√≥c t∆∞": 50000,
        "C∆°m g√† m√° ƒë√πi": 38000,
        "C∆°m g√† ƒë√πi t·ªèi": 38000,
        "C∆°m g√† da g√† ·ªëp la": 40000,
      },
      comchien: {
        "C∆°m chi√™n d∆∞∆°ng ch√¢u": 38000,
        "C∆°m chi√™n x√° x√≠u": 38000,
        "C∆°m chi√™n 2 tr·ª©ng ·ªëp la": 48000,
        "C∆°m chi√™n da g√†": 18000,
      },
      monthem: {
        "Tr·ª©ng ·ªëp la": 7000,
        "Da g√† th√™m": 10000,
        "Canh rong bi·ªÉn": 10000
      },
      nuoc: {
        "Sting": 15000,
        "Pepsi": 12000,
        "Olong xanh": 15000,
        "Cafe ƒëen": 12000,
        "Cafe s·ªØa": 15000,
      }
    };

    let cart = [];

    function updateMenu() {
      const category = document.getElementById("category").value;
      const dishSelect = document.getElementById("dish");
      dishSelect.innerHTML = '<option value="">-- Ch·ªçn m√≥n --</option>';

      if (menu[category]) {
        for (const dish in menu[category]) {
          const option = document.createElement("option");
          option.value = dish;
          option.textContent = `${dish} - ${menu[category][dish]}ƒë`;
          dishSelect.appendChild(option);
        }
      }
    }

    function addToCart() {
      const table = document.getElementById("table").value;
      const dish = document.getElementById("dish").value;
      const category = document.getElementById("category").value;
      const quantity = parseInt(document.getElementById("quantity").value);

      if (!table) return alert("Vui l√≤ng nh·∫≠p s·ªë b√†n!");
      if (!dish) return alert("Vui l√≤ng ch·ªçn m√≥n!");
      if (quantity <= 0) return alert("S·ªë l∆∞·ª£ng ph·∫£i l·ªõn h∆°n 0!");

      const price = menu[category][dish];
      cart.push({ dish, price, quantity });

      renderCart();
    }

    function renderCart() {
      const cartList = document.getElementById("cartList");
      const totalEl = document.getElementById("total");

      cartList.innerHTML = "";
      let total = 0;

      cart.forEach((item, index) => {
        const li = document.createElement("li");
        const itemTotal = item.price * item.quantity;
        li.innerHTML = `${item.dish} x${item.quantity} - ${itemTotal.toLocaleString()}ƒë
                        <button class="remove-btn" onclick="removeItem(${index})">X</button>`;
        cartList.appendChild(li);
        total += itemTotal;
      });

      totalEl.textContent = total.toLocaleString();
    }

    function removeItem(index) {
      cart.splice(index, 1);
      renderCart();
    }

    function placeOrder() {
      if (cart.length === 0) return alert("Gi·ªè h√†ng ƒëang tr·ªëng!");
      const table = document.getElementById("table").value;
      let message = `‚úÖ B√†n ${table} ƒë√£ ƒë·∫∑t:\n`;
      let total = 0;
      cart.forEach(item => {
        const itemTotal = item.price * item.quantity;
        message += `- ${item.dish} x${item.quantity}: ${itemTotal.toLocaleString()}ƒë\n`;
        total += itemTotal;
      });
      message += `\nT·ªïng c·ªông: ${total.toLocaleString()}ƒë`;
      alert(message);

      // Reset sau khi ƒë·∫∑t m√≥n
      cart = [];
      renderCart();
    }
  </script>
